<%- include('./includes/head.ejs') %>

    <!--Main Start -->
    <main class="main">
      <%- include('./includes/errors.ejs') %> 
      <div class="heading">
        <h2 class="heading_msg">Login</h2>
      </div>
      <div class="form_div">
        <form action="/user/login" method="POST">
          <div class="form_element">
            <label for="username">Username</label>
            <input
              type="email"
              required="true"
              
              id="username"
              name="username"
            />
          </div>
          <div class="form_element">
            <label for="password">password</label>
            <input
              type="password"
              required="true"
              autocomplete="off"
              id="password"
              name="password"
            />
          </div>
          <div class="submitbtn">
          <button class="button" type="submit">Submit</button>
        </div>
        </form>
        <form action="/user/login/google" method="GET">
          <div class="submitbtn">
            <button class="button" type="submit"><i class="fab fa-google"></i>login</button>
          </div>
        </form>
        <form action="/user/register" method="GET">
          <div class="submitbtn">
            <button class="button" type="submit">Register</button>
          </div>
        </form>
      </div>
  </main>

  <!-- Main Ends -->

<%- include('./includes/end.ejs') %>